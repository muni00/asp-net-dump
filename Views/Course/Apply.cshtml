@model Candidate
<div class = "display-6">
   Apply
</div>

<form method = "post" asp-action ="apply">
    <div class="text-denger" asp-validation-summary="All">

    </div>
    <div class = "form-group my-3">
        <label asp-for="Email">E-mail</label>
        <input name = "Email" class = "form-control"/>
    </div>
    <div class = "form-group my-3">
        <label>First Name</label>
        <input name = "FirstName" class = "form-control"/>
    </div>
    <div class = "form-group my-3">
        <label>Last Name</label>
        <input name = "LastName" class = "form-control"/>
    </div>
    <div class = "form-group my-3">
        <label>Age</label>
        <select name = "Age" class = "form-control">
            <option value="18">18</option>
            <option value="19">19</option>
            <option value="20">20</option>
            <option value="21">21</option>
            <option value="22">22</option>
            <option value="23">23</option>
            <option value="24">24</option>
        </select>
    </div>
    <fieldset>
        <legend>Select one course</legend>
        <p>
            <input id = "mvc" type = "radio" name ="SelectedCourse" value="ASP.NET Core MVC" checked>
            <label>ASP.NET Core MVC</label>
        </p>
        <p>
            <input id = "api" type = "radio" name ="SelectedCourse" value="ASP.NET Core API">
            <label>ASP.NET Core API</label>
        </p>
        <p>
            <input id = "blazor" type = "radio" name ="SelectedCourse" value="Blazor">
            <label>Blazor</label>
        </p>
    </fieldset>
    <div>
        <button class="btn btn-primary" type="submit">Apply</button>
        <a class="btn btn-warning" asp-asp-controller="Home" asp-action="Index">Home</a>
    </div>
</form>